{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "target": "es6",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "ES2019",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
